<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.reception.candy.candyreception.controller.LozaActivity">

    <RelativeLayout
        android:id="@+id/pb_Loza"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="15sp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="1">

        <ProgressBar
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminate="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description_loza"
                android:textSize="25sp"
                android:textColor="@color/colorPrimaryDark"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="10"
                android:orientation="horizontal">
            <CheckBox
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:textSize="20sp"
                android:text="Cuchara sopera"
                android:textColor="@color/colorPrimaryDark" />

            <CheckBox
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:textSize="20sp"
                android:text="Cuchara pastelera"
                android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="10"
                android:orientation="horizontal">
                <CheckBox
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:textSize="20sp"
                    android:text="Tenedor"
                    android:textColor="@color/colorPrimaryDark" />

                <CheckBox
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:textSize="20sp"
                    android:text="Cuchillo"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="10"
                android:orientation="horizontal">
                <CheckBox
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:textSize="20sp"
                    android:text="Plato extendido gde"
                    android:textColor="@color/colorPrimaryDark" />

                <CheckBox
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:textSize="20sp"
                    android:text="Plato extendido chico"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="10"
                android:orientation="horizontal">
                <CheckBox
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:textSize="20sp"
                    android:text="Plato pastelero"
                    android:textColor="@color/colorPrimaryDark" />

                <CheckBox
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:textSize="20sp"
                    android:text="Plato hondo"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="10"
                android:orientation="horizontal">
                <CheckBox
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:textSize="20sp"
                    android:text="Servilleta de tela"
                    android:textColor="@color/colorPrimaryDark" />

                <CheckBox
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:textSize="20sp"
                    android:text="Salero"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="10"
                android:orientation="horizontal">
                <CheckBox
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:textSize="20sp"
                    android:text="Hielera c/pinzas"
                    android:textColor="@color/colorPrimaryDark" />

                <CheckBox
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:textSize="20sp"
                    android:text="Tortillero"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="10"
                android:orientation="horizontal">
                <CheckBox
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:textSize="20sp"
                    android:text="Copa de agua"
                    android:textColor="@color/colorPrimaryDark" />

                <CheckBox
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:textSize="20sp"
                    android:text="Copa de vino"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="10"
                android:orientation="horizontal">
                <CheckBox
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:textSize="20sp"
                    android:text="Vaso de cristal"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorPrimaryDark" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
