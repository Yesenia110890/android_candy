<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.reception.candy.candyreception.controller.LozaActivity">

    <RelativeLayout
        android:id="@+id/pb_Loza"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="15sp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="1">

        <ProgressBar
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminate="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description_loza"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="10"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chx_cuch_sopera"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:text="Cuchara sopera"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/chx_cuch_pastel"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:text="Cuchara pastelera"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="10"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chx_tenedor"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:text="Tenedor"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/chx_cuchillo"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:text="Cuchillo"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="10"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chx_plato_ext_gde"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:text="Plato extendido gde"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/chx_plato_ext_chico"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:text="Plato extendido chico"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="10"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chx_plato_pastel"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:text="Plato pastelero"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/chx_plato_hondo"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:text="Plato hondo"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="10"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chx_servilleta"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:text="Servilleta de tela"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/chx_salero"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:text="Salero"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="10"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chx_hielera"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:text="Hielera c/pinzas"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/chx_tortillero"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:text="Tortillero"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="10"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chx_copa_agua"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:text="Copa de agua"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/chx_copa_vino"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:text="Copa de vino"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="10"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chx_vaso"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="50"
                    android:text="Vaso de cristal"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp" />

                <Button
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="30sp"
                    android:background="@drawable/degradado1"
                    android:onClick="guardarEvento"
                    android:text="Guardar Reservación"
                    android:textColor="@color/colorPrimaryDark" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
