<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.reception.candy.candyreception.controller.CustomerActivity">

    <RelativeLayout
        android:id="@+id/pb_Customer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="15sp"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="1">

        <ProgressBar
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminate="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="5"
                android:text="Registrate para poder reservar:"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="20"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edt_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="10"
                    android:hint="Nombre"
                    android:textColor="@color/colorAccent"
                    android:inputType="text|textCapSentences"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edt_apellido"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="10"
                    android:hint="Apellido"
                    android:textColor="@color/colorAccent"
                    android:inputType="text|textCapSentences"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edt_edad"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="10"
                    android:hint="Edad"
                    android:textColor="@color/colorAccent"
                    android:maxLength="5"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:inputType="number"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edt_direccion"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="10"
                    android:hint="Dirección"
                    android:textColor="@color/colorAccent"
                    android:inputType="text|textCapSentences"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edt_telefono"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="10"
                    android:hint="Teléfono"
                    android:textColor="@color/colorAccent"
                    android:inputType="phone"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="10"
                    android:hint="E-mail"
                    android:textColor="@color/colorAccent"
                    android:inputType="textWebEmailAddress"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30sp"
                android:layout_weight="20">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/degradado1"
                    android:onClick="Envia"
                    android:text="Enviar"
                    android:textColor="@color/colorPrimaryDark" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/degradado1"
                    android:onClick="Cancela"
                    android:text="Cancelar"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>

